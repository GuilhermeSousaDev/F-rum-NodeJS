{{#if docs}}
    <div class="container mt-3">
        <div>
            <img style="width: 200px; height: 200px" src="../image/{{docs.image}}">
            <h1>{{docs.title}}</h1>
            <p>{{docs.description}}</p>
            <small>Criado em: {{docs.date}}</small>
            <br>
            {{#if exists}}
              <button class="btn btn-primary mt-4" id="btn">Inscrito!</button>
                <div style="display: none;" id="enter">
                    <h1>Você já entrou nessa discussão, Deseja Sair?</h1>
                    <a href="/discussions/{{docs._id}}/getoutDiscussion"><button class="btn btn-primary">Sim</button></a>
                    <button class="btn btn-danger" id="btnnot">Não</button>
                </div>
              {{else}}
                <button class="btn btn-success mt-4" id="btn">Entrar na Discussão</button>
                <div style="display: none;" id="enter">
                  <h1>Deseja Entrar na Discussão?</h1>
                  <a href="/discussions/{{docs._id}}/insertUser"><button class="btn btn-primary">Sim</button></a>
                  <button class="btn btn-danger" id="btnnot">Não</button>
                </div>
              {{/if}}
        </div>
    </div>
    <script>
        const btn = document.getElementById('btn')
        btn.addEventListener('click', () => {
            const div = document.getElementById('enter')
            div.style.display = 'block'
            const btnnot = document.getElementById('btnnot')
            btnnot.addEventListener('click', () => {
                div.style.display = 'none'
            })
        })
    </script>
{{/if}}
